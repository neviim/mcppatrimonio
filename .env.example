# URL base da API de patrimônio
PATRIMONIO_BASE_URL=https://api.example.com

# Token de autenticação da API
PATRIMONIO_TOKEN=seu_token_aqui

# Ambiente de execução (development, production, test)
NODE_ENV=development

# Nível de log (debug, info, warn, error)
LOG_LEVEL=info

# Rate Limiting - Janela de tempo em milissegundos (padrão: 60000 = 1 minuto)
RATE_LIMIT_WINDOW_MS=60000

# Rate Limiting - Máximo de requisições por janela (padrão: 100)
RATE_LIMIT_MAX_REQUESTS=100

# ===================================
# Configurações de Transporte Remoto
# ===================================

# Modo de transporte: "stdio" (local) ou "http" (remoto)
TRANSPORT_MODE=http

# Configurações do servidor HTTP (usado quando TRANSPORT_MODE=http)
HTTP_HOST=0.0.0.0
HTTP_PORT=3000

# Segurança: API Keys para autenticação (separadas por vírgula)
# Gere keys seguras com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_KEYS=e96ba5d6448d3839eda27f78f49a4f3c7c84053cb0c22f1dd8b734983def2789

# CORS: Habilitar Cross-Origin Resource Sharing
ENABLE_CORS=true

# CORS: Origens permitidas (separadas por vírgula, use "*" apenas em desenvolvimento)
CORS_ORIGINS=*
